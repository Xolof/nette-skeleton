<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
  <link rel="stylesheet" href="{$basePath}/css/picnic.min.css">
  <link rel="stylesheet" href="{$basePath}/css/styles.css">
  <link rel="icon" href="favicon.ico">
</head>

<body>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
  <nav>
    <a n:href="Home:" class="brand">
      <img class="logo" src="/favicon.ico" />
    </a>

    <!-- responsive-->
    <input id="bmenub" type="checkbox" class="show">
    <label for="bmenub" class="burger pseudo button">&#8801;</label>

    <div class="menu">
      <a n:href="Home:">Home</a>
        {if $user->isLoggedIn()}
          <a n:href="Sign:out">Sign out</a>
        {else}
          <a n:href="Sign:in">Sign in</a>
        {/if}
    </div>
  </nav>
  <main class="container">
    {include content}
  </main>
	{block scripts}
	<script src="https://unpkg.com/nette-forms@3"></script>
	{/block}
</body>
</html>
