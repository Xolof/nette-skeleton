{block content}
  <p><a n:href="Home:default">← back to posts list</a></p>
  <header>
    <h1 n:block="title">{$post->title}</h1>
  </header>
  <section>
    <div>{$post->content|truncate:256}</div>
	</section>
  <footer>
    <div class="date">{$post->created_at|date:'Y-m-d H:i'}</div>
  </footer>
{/block}
